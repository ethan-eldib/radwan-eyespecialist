{% set currentPath = path(app.request.attributes.get('_route')) %}

{% set checkedPath = false %}
{% if currentPath == path('fees') or currentPath == path('services')%}
    {% set checkedPath = true %}
{% endif %}

<header id="header" class="header">
    <nav class="navbar navbar-expand-lg js-navbar-scroll fixed-top">
        <a class="navbar-brand" href="#"><img id="logo" src="/images/logo/logo.png" alt="logo radwan eye specialist"></a>
        <button class="navbar-toggler navbar-toggler-right navbar-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link hover hover-underline " href="{{ path('homepage') }}">Home</a>
                </li>
                <li class="nav-item ">
                    <a id="js-anchor-link-about" class="nav-link hover hover-underline " href="{% if checkedPath %}{{ path('homepage') }}{% else %}#target-about{% endif %}#target-about">About</a>
                </li>
                <li class="nav-item">
                    <a id="js-anchor-link-area-expertise" class="nav-link hover hover-underline " href="{% if checkedPath %}{{ path('homepage') }}{% else %}#target-area-expertise{% endif %}#target-area-expertise">Research</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link hover hover-underline " href="{{ path('services') }}">Services</a>
                </li>
                <li class="nav-item">
                    <a id="js-anchor-link-testimonials" class="nav-link hover hover-underline " href="{% if checkedPath %}{{ path('homepage') }}{% else %}#target-testimonials{% endif %}#target-testimonials">Testimonials</a>
                </li>
                <li class="nav-item">
                    <a id="js-anchor-link-publications" class="nav-link hover hover-underline " href="{% if checkedPath %}{{ path('homepage') }}{% else %}#target-publications{% endif %}#target-publications">Publications</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link hover hover-underline " href="{{ path('fees') }}">Fees</a>
                </li>
                <li class="nav-item">
                    <a id="js-anchor-link-appointment" class="nav-link hover hover-underline " href="{% if checkedPath %}{{ path('homepage') }}{% else %}#target-appointment{% endif %}#target-appointment">Appointment</a>
                </li>
                <li class="nav-item">
                    <a class="js-anchor-link nav-link hover hover-underline " href="#target-contact">Contact</a>
                </li>
            </ul>
        </div>
        {% for label, messages in app.flashes %}
            <div class="container">
                <div id="alert" class="alert alert-{{ label }}">
                    <a class="close">x</a>
                    {% for message in messages %}
                        <p>{{message | raw}}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </nav>
</header>
