                </li>
            </ul>				
        </div>
        {% for label, messages in app.flashes %}
            <div class="container">
                <div id="alert" class="alert alert-{{ label }}">
                    <a class="close">x</a>
                    {% for message in messages %}
                        <p>{{message | raw}}</p>
                    {% endfor %}
                </div>
            </div>
